<Window x:Class="BattleLAN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Battle.LAN" Height="380" Width="550"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinWidth="500" MinHeight="350">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="4,4,0,0"
                Padding="16,12"
                Margin="0,0,0,12">
            <TextBlock Text="Battle.LAN" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="White"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="IpAddressTextBox" 
                            Grid.Column="0"
                            Style="{StaticResource ModernTextBox}"
                            Margin="0,0,8,0"
                            TextChanged="IpAddressTextBox_TextChanged"
                            KeyDown="IpAddressTextBox_KeyDown"/>
                    <Button x:Name="AddButton" 
                           Grid.Column="1"
                           Content="Add" 
                           Style="{StaticResource ModernButton}"
                           Margin="0,0,6,0"
                           Padding="12,8"
                           Click="AddButton_Click"
                           IsEnabled="False"/>
                    <Button x:Name="RemoveButton" 
                           Grid.Column="2"
                           Content="Remove" 
                           Style="{StaticResource ModernButton}"
                           Padding="12,8"
                           Click="RemoveButton_Click"
                           IsEnabled="False"/>
                </Grid>
                
                <ListBox x:Name="ReceiversListBox" 
                        Style="{StaticResource ModernListBox}"
                        ItemContainerStyle="{StaticResource ModernListBoxItem}"
                        SelectionChanged="ReceiversListBox_SelectionChanged"
                        Height="150"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Width="100">
                <Button x:Name="StartButton" 
                       Content="Start" 
                       Style="{StaticResource SuccessButton}"
                       Margin="0,0,0,8"
                       Click="StartButton_Click"/>
                <Button x:Name="StopButton" 
                       Content="Stop" 
                       Style="{StaticResource AccentButton}"
                       Margin="0,0,0,8"
                       Click="StopButton_Click"
                       IsEnabled="False"/>
                <Button x:Name="SaveButton" 
                       Content="Save" 
                       Style="{StaticResource ModernButton}"
                       Margin="0,0,0,8"
                       Click="SaveButton_Click"/>
                <Button x:Name="ExitButton" 
                       Content="Exit" 
                       Style="{StaticResource ModernButton}"
                       Click="ExitButton_Click"/>
            </StackPanel>
        </Grid>
        
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource DividerBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,8"
                Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal">
                <Ellipse x:Name="StatusIndicator" 
                        Width="10" 
                        Height="10" 
                        Fill="{StaticResource DividerBrush}"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusTextBlock" 
                          Text="Stopped" 
                          Foreground="{StaticResource TextSecondaryBrush}"
                          VerticalAlignment="Center"
                          FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

